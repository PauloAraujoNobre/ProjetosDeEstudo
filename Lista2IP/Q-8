#include <stdio.h>
int main(){
    int i, soma = 0;
    int x[9];
    float media = 0;
    for(i=0;i<10;i++){
        printf("Digite o %dº número: ", i+1);
        scanf("%i", &x[i]);
    }
    for(i=0;i<10;i++){
        soma = soma + x[i];
    }
    media = soma/10.0;
    printf("A média aritimética vale: %.1f", media);
    return 0;
}
