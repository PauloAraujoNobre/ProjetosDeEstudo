#include <stdio.h>
int main(){	
    int i, j, n, k = 0, soma = 0, count = 0;
    printf("Digite um n√∫mero maior do que 1: ");
    scanf("%i", &n);
    for(i=1;k<n;i++){
        for(j=i;j>0;j--){
            if(i%j == 0){
                count++;
            }
        }
        if(count < 3){
            soma = soma+i;
            k++;
        }
        count = 0;
    }
    printf("A soma dos primeiros %d primos vale: %d", n, soma);
	return 0;
}
